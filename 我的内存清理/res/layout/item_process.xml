<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/iv_itemprocess_ic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_itemprocess_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_itemprocess_ic"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="我的内存清理"
        android:ems="8"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_itemprocess_loaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_itemprocess_name"
        android:layout_toRightOf="@id/iv_itemprocess_ic"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="包名"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/cb_itemprocess_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />

</RelativeLayout>